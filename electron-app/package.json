{
  "name": "pos-manager-electron-app",
  "description": "POS Manager Electron Application",
  "author": "Your Name",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --windows",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "29.3.0",
    "electron-builder": "^24.13.2"
  },
  "build": {
    "appId": "com.example.posmanager",
    "productName": "POS Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    }
  }
}
