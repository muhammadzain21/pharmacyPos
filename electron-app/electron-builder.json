{
  "appId": "com.salimaali.posmanager",
  "productName": "Hospital POS",
  "files": [
    "dist/**/*",
    "main.js",
    "package.json",
    "icon.ico",
    "icon.png",
    "splash.html"
  ],
  
  "directories": {
    "buildResources": "."
  },
  "win": {
    "icon": "icon.png",
    "target": [
      "nsis"
    ]
  },
  "artifactName": "Hospital POS Setup ${version}.${ext}",
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerSidebar": "installerSidebar.bmp",
    "installerHeader": "installerHeader.bmp",
    "uninstallerSidebar": "uninstallerSidebar.bmp"
  }
}